{
  "name": "ethical-metrics",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.1.0",
  "repository": "https://github.com/dappnode/DAppNodePackage-ethical-metrics.git",
  "author": "DappNode Association",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:common && npm run build:server && npm run build:ui",
    "build:common": "npm --prefix packages/common run build",
    "build:server": "npm --prefix packages/server run build",
    "build:ui": "npm --prefix packages/ui run build",
    "lint": "eslint . --ext .jsx,.ts,.tsx",
    "link:ui": "cd packages/server && npm run link:ui"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "eslint": "^8.45.0"
  }
}
